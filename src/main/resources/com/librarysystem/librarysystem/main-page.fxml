<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarysystem.librarysystem.Controller">
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>

    <Label text="Author:" GridPane.columnIndex="0" GridPane.rowIndex="0" />

    <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Book name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Genre:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextField fx:id="genreField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Number of books:" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <TextField fx:id="numberField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Genres:" GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <Button fx:id="confirmButton" alignment="CENTER" prefWidth="255.0" text="Confirm" GridPane.columnSpan="2" GridPane.rowIndex="5" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
