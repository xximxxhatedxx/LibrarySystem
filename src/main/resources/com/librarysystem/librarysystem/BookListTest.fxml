<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarysystem.librarysystem.BookListController">
    <children>
        <VBox fx:id="List" layoutX="221.0" layoutY="50.0" prefHeight="500.0" prefWidth="750.0" style="-fx-background-color: #eeeeee;">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
        <ToolBar layoutX="811.0" layoutY="550.0" prefHeight="40.0" prefWidth="160.0">
            <items>
                <Button fx:id="backButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" text="&lt;" />
                <TextField fx:id="currentPage" alignment="CENTER" editable="false" prefWidth="35.0" text="1" />
                <Label text="of" />
                <TextField fx:id="pagesCount" alignment="CENTER" editable="false" prefWidth="35.0" text="100" />
                <Button fx:id="forwardButton" layoutX="10.0" layoutY="13.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" text="&gt;" />
            </items>
        </ToolBar>
        <TextField fx:id="searchTextField" layoutX="221.0" layoutY="25.0" prefHeight="25.0" prefWidth="750.0" />

        <fx:define>
            <ToggleGroup fx:id="Search" />
        </fx:define>
        <ToggleButton fx:id="authorButton" layoutX="111.0" layoutY="52.0" prefHeight="25.0" prefWidth="60.0" text="author">
         <toggleGroup>
            <ToggleGroup fx:id="Search" />
         </toggleGroup></ToggleButton>
        <ToggleButton fx:id="nameButton" layoutX="51.0" layoutY="52.0" prefHeight="25.0" prefWidth="60.0" selected="true" text="name" toggleGroup="$Search" />
    </children>
</AnchorPane>
