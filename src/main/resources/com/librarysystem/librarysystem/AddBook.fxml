<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>
<?import java.lang.String?>

<GridPane alignment="center" hgap="10.0" prefHeight="810.0" prefWidth="1210.0" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarysystem.librarysystem.AddBookController">

    <Label text="Author:" GridPane.columnIndex="0" GridPane.rowIndex="0" />

    <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Book name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Number of books:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextField fx:id="numberField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Genres:" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <CheckComboBox fx:id="genreCheckBox" prefWidth="149.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <String fx:value="Horror"/>
        <String fx:value="Fantasy"/>
        <String fx:value="Thriller"/>
        <String fx:value="Romance"/>
        <String fx:value="Adventure"/>
    </CheckComboBox>

    <Button fx:id="confirmButton" alignment="CENTER" prefWidth="255.0" text="Confirm" GridPane.columnSpan="2" GridPane.rowIndex="4" />

</GridPane>
